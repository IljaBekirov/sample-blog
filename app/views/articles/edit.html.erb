<h1>Edit article</h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>
  <% if @article && @article.errors.any? %>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p>
    <%= f.label :title%><br>
    <%= f.text_field :title, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :text%><br>
    <%= f.text_area :text, style: 'width:100%; height: 150px' %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>
