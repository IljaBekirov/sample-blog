<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.hidden_field :author, { :value => current_user.username } %>
  </p>

  <p>
    <%= f.label :title%><br>
    <%= f.text_field :title, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :text%><br>
    <%= f.text_area :text, style: 'width:100%; height: 150px' %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>
